<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
 <sqlMap  namespace="sql.uam">
	
 	<typeAlias alias="user" type="com.goo.uam.entity.User" />
    <resultMap id="userMap" class="com.goo.uam.entity.User">
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="userEmail" column="user_email"/>
        <result property="userName" column="user_name"/>
        <result property="createTime" column="createTime"/>
        
    </resultMap>
 	<select id="selectOneUser" parameterClass="user" resultClass="Integer">
 		select count(*) from t_uam_user where user_email=#emailAddress# and password = #password#
 	</select>
 	
 	<insert id="checkUser" parameterClass="user">
 		insert into t_uam_user(password,user_name, user_email)
 		values(#password#,#loginName#,#emailAddress#) 
 	</insert>
 	
 </sqlMap>